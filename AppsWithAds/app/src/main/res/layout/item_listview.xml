<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:padding="5dip"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:background="@drawable/image_bg"
        android:layout_marginRight="5dip">
        <ImageView
            android:id="@+id/imgThumbnail"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="80dp" />
     </LinearLayout>
    <LinearLayout
        android:id="@+id/ratingCntr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_below="@+id/textAddress"
        android:layout_marginLeft="5dp">
    </LinearLayout>

        <TextView
            android:id="@+id/textTitle"
            android:text=""
            android:textSize="20sp"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:textColor="@color/colorTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textCategories"
                android:layout_width="wrap_content"
                android:text="Categories"
                android:textColor="@color/colorText"
                android:layout_toRightOf="@+id/textRating"
                android:layout_marginRight="3dp"
                android:layout_below="@+id/textTitle"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textDistance"
                android:layout_width="wrap_content"
                android:text=""
                android:textColor="@color/colorText"
                android:layout_below="@+id/textTitle"
                android:layout_toRightOf="@+id/textCategories"
                android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/textRating"
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDistance"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_marginRight="3dp"/>


        <TextView
            android:id="@+id/textAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorText"
            android:layout_below="@+id/textCategories"
            android:text=""
            android:layout_toRightOf="@+id/thumbnail" />

</RelativeLayout>